{
  "name": "tournement-master",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "vite build && cross-env NODE_ENV=production electron .",
    "electron:icon": "node scripts/build-icon.cjs",
    "electron:pack": "cross-env NODE_OPTIONS=--no-deprecation npm run electron:icon && cross-env NODE_OPTIONS=--no-deprecation vite build && cross-env NODE_OPTIONS=--no-deprecation electron-builder --win",
    "electron:dist": "cross-env NODE_OPTIONS=--no-deprecation npm run electron:icon && cross-env NODE_OPTIONS=--no-deprecation vite build && cross-env NODE_OPTIONS=--no-deprecation electron-builder --win --publish never",
    "mobile:build": "vite build && cap sync",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:add:android": "cap add android",
    "cap:apk": "npm run mobile:build && cd android && gradlew.bat assembleDebug"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.84.1",
    "axios": "^1.11.0",
    "html-to-image": "^1.11.13",
    "jspdf": "^4.1.0",
    "lucide-react": "^0.539.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1",
    "react-zoom-pan-pinch": "^3.7.0",
    "xlsx": "^0.18.5",
    "@capacitor/core": "^7.0.0",
    "@capacitor/android": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "electron": "^33.0.0",
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "cross-env": "^7.0.3",
    "electron-builder": "^25.0.0",
    "sharp": "^0.33.0",
    "to-ico": "^1.1.0",
    "@capacitor/cli": "^7.0.0"
  },
  "build": {
    "appId": "com.turnuvaist.taekwondo",
    "productName": "Turnuvaist Taekwondo",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "build/icon.ico",
      "package.json"
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    }
  }
}
